{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  "AllowedHosts": "*",
  "MongoDbSettings": {
    "ConnectionString": "${MONGODB_CONNECTION_STRING}",
    "DatabaseName": "${DATABASE_NAME}"
  },
  "Jwt": {
    "Key": "${JWT_SECRET}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpiryMinutes": 60
  },
  "Security": {
    "CorsOrigins": ["https://*.railway.app", "https://*.render.com", "https://*.vercel.app", "http://localhost:3000"],
    "RateLimiting": {
      "General": {
        "PermitLimit": 100,
        "Window": "00:01:00",
        "BurstLimit": 60
      },
      "Auth": {
        "PermitLimit": 10,
        "Window": "00:01:00",
        "BurstLimit": 5
      }
    }
  }
}
